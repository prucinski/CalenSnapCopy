<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Large circle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="12dp"
                android:color="#52FFFFFF" />
        </shape>
    </item>
    <!-- Middle circle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="20dp"
                android:color="#A4FFFFFF" />
        </shape>
    </item>
    <!-- Smallest circle at front -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="50dp"
                android:height="50dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item
        android:width="14dp"
        android:height="6dp"
        android:top="15dp"
        android:right="21dp"
        android:gravity="center">
        <rotate
            android:fromDegrees="40">
            <shape android:shape="rectangle">
                <solid android:color="@color/secondaryColor"/>
            </shape>
        </rotate>
    </item>

    <item
        android:width="35dp"
        android:height="6dp"
        android:left="12dp"
        android:top="4dp"
        android:gravity="center"
        >
        <rotate
            android:fromDegrees="-50">
            <shape android:shape="rectangle">
                <solid android:color="@color/secondaryColor"/>
            </shape>
        </rotate>
    </item>

</layer-list>