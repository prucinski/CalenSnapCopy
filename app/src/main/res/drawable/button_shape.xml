<?xml version="1.0" encoding="utf-8"?>
<!--Design of the main button through a list of drawables-->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape  android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/dark_blue"
                android:centerColor="@color/shadow_colour"
                android:endColor="@color/lightest_teal"
                android:type="linear"
                />
            <corners android:radius="100dp" />
        </shape>
    </item>

    <item android:bottom="13px">
        <shape  android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="20dp"
                android:right="20dp"/>
            <corners android:radius="100dp" />
            <gradient
                android:startColor="@color/very_light_teal"
                android:centerColor="#CEF3FA"
                android:endColor="#CFF2F8"
                android:type="linear"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
        </shape>
    </item>

</layer-list>
