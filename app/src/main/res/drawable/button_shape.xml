<?xml version="1.0" encoding="utf-8"?>
<!--Design of the main button through a list of drawables-->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="13px">
        <shape  android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="20dp"
                android:right="20dp"/>
            <corners android:radius="20dp" />
            <solid
                android:color="@color/secondaryColor"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
        </shape>
    </item>

</layer-list>
