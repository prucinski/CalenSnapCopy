<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.OCRHotel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Adding so that the Action bar is not visible -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_light_teal</item>
        <item name="colorPrimaryVariant">@color/lightest_teal</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- The background of the application. -->
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- I believe app crashes without this. -->
<!--        <item name="colorSurface" >@android:color/transparent</item>-->

        <item name="textFillColor">@color/white</item>


    </style>

    <style name="ThemeOverlay.OCRHotel.BottomAppBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:iconTint">@color/white</item>
        <item name="android:backgroundTint">#5175F6</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.OCRHotel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.OCRHotel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OCRHotel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorSurface">@color/white</item>
    </style></resources>
