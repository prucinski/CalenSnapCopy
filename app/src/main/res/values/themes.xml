<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.OCRHotel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Adding so that the Action bar is not visible -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_light_teal</item>
        <item name="colorPrimaryVariant">@color/lightest_teal</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- The background of the application. -->
        <item name="android:windowBackground">#EEEEEE</item>
        <item name="android:background">#EEEEEE</item>

        <item name="android:backgroundTint">#FFFFFF</item>

        <item name="textFillColor">@color/white</item>

        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBar</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>

    </style>

    <!--    BottomAppBar's theme-->
    <style name="Widget.App.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomAppBar</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.BottomAppBar" parent="">
        <item name="android:backgroundTint">#2962FF</item>
        <item name="colorPrimary">#EEEEEE</item>
        <item name="colorOnPrimary">#EEEEEE</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="android:backgroundTint">#45B4F6</item>
        <item name="colorSecondary">#45B4F6</item>
        <item name="colorOnSecondary">#FFFFFF</item>
    </style>

    <style name="Theme.OCRHotel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.OCRHotel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OCRHotel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorSurface">@color/white</item>
    </style></resources>
