<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.OCRHotel" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Adding so that the Action bar is not visible -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- The background of the application. -->
        <item name="android:windowBackground">@color/primaryDarkColor</item>

        <item name="colorOnSurface">#465661</item>-->
        <item name="colorSurface">#465661</item>-->
        <item name="colorOnBackground">#212121</item>-->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorError">#F44336</item>-->
        <item name="colorOnError">#FFFFFF</item>


    </style>

    <style name="Theme.OCRHotel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.OCRHotel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OCRHotel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
